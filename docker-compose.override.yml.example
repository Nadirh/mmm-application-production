# Docker Compose override file example
# Copy to docker-compose.override.yml and customize as needed
# This file is automatically loaded by docker-compose

version: '3.8'

services:
  mmm-app:
    # Override environment variables
    environment:
      - LOG_LEVEL=DEBUG
      - MMM_ENV=development
    
    # Add additional volume mounts
    volumes:
      - ./custom_data:/app/custom_data
    
    # Override command for debugging
    # command: ["python", "-m", "debugpy", "--listen", "0.0.0.0:5678", "--wait-for-client", "-m", "mmm"]
    
    # Add debug port
    # ports:
    #   - "5678:5678"  # Debug port
    
  redis:
    # Override Redis configuration
    # command: redis-server --loglevel verbose
    
    # Add Redis monitoring
    ports:
      - "6379:6379"  # Expose Redis port locally

